<style>

  input {
    color: lightgrey;
  }

  label {
    font-weight: bold !important;
  }

  p {
    line-height: 80% !important;
  }

  @media print {
    #hide1 {
      display: none;
    }
    h1, h2 {
      margin-bottom: 0px !important;
    }
    nav {
      display: none;
    }

    #pdf {
      display: block !important;
